<%=layout ("./layouts/boilerplate.ejs")%>

<div class="row">
    <h1 class="col-6 offset-3"> Signup On Wonderlust</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="post" class="needs-validation" novalidate>

            
        <div class="mb-3">
            <label for="username" 
            class="form-label">Username
            </label>

        <input name="username" id="username"  type="text"  class="form-control" required>
           <div class="valid-feedback"> Looks good
            </div>
        <div class="invalid-feedback">Please Enter Username
          </div>
        </div>

        <div class="mb-3">
            <label for="email" 
            class="form-label">E-mail
            </label>

        <input name="email" id="email"  type="text"  class="form-control" required>
        <div class="invalid-feedback">Please Enter email
          </div>
        </div>

        <div class="mb-3">
            <label for="password" 
            class="form-label">Password
            </label>

        <input  name="password" id="password"  type="password"  class="form-control" required>
        <div class="invalid-feedback">Please Enter Password
          </div>
        </div>
               
             <button class="btn btn-success">Signup</button>
        </form>
     </div>
</div>